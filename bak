    <script>
        // JavaScript for responsive mobile menu toggle
        document.addEventListener('DOMContentLoaded', () => {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            // Close mobile menu when a link is clicked
            mobileMenu.querySelectorAll('a').forEach(link => {
                link.addEventListener('click', () => {
                    mobileMenu.classList.add('hidden');
                });
            });

            // Set initial scale for lotus animations
            document.querySelectorAll('.lotus-animation').forEach(svg => {
                const initialScale = parseFloat(svg.style.getPropertyValue('--initial-scale'));
                if (!isNaN(initialScale)) {
                    svg.style.setProperty('--initial-scale', initialScale);
                } else {
                    svg.style.setProperty('--initial-scale', 1); // Default if not set
                }
            });
        });
    </script>



